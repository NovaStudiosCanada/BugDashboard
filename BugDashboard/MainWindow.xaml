<Window x:Class="BugDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BugDashboard"
        mc:Ignorable="d"
        Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="#0d0b11"
            CornerRadius="5">
        
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="1">
                <RadioButton Content="Home" Height="50" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Search" Height="50" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Results" Height="50" FontSize="14" Style="{StaticResource MenuButtonTheme}"/>


            </StackPanel>

        </Grid>

    </Border>
</Window>
